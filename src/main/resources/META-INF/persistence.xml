<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="mysql">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.persistence.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.persistence.jdbc.user" value="root"/>
            <property name="hibernate.persistence.jdbc.password" value="2042001"/>



            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
        </persistence-unit>
   </persistence>